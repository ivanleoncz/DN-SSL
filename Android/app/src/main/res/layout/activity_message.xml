<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivanleoncz.android_dnssl.MessageActivity">


    <TextView
        android:id="@+id/message_welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_above="@+id/message_intro"
        android:text="@string/message_welcome"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message_intro"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:layout_above="@id/message_text1"
        android:text="@string/message_intro"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/message_text1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/message_text1"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message_text2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/message_text1"
        android:gravity="center"
        android:text="@string/message_text2"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/message_text2"
        android:gravity="center"
        android:text="http://.../"/>

</RelativeLayout>
